{
   "name": "Pali-Sinhala Dictionary",
   "description": "Pali-Sinhala Dictionary tooltip",
   "version": "0.1",
   "permissions": [
       "activeTab"
   ],
   "web_accessible_resources": [
      "data/*"
   ],
   "content_scripts": [
      {
         "matches": ["http://www.tipitaka.org/*"],
         "css": ["styles.css"]
      },
   "background":{
      "scripts": ["background.js"],
       "persistent": false
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "on/off"
   },

   "manifest_version": 2
}
